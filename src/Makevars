## Use the R_HOME indirection to support installations of multiple R version
CC=clang-omp
CXX=clang-omp++

PKG_CFLAGS=Wall -pedantic
PKG_CFLAGS= -fopenmp
PKG_CXXFLAGS= -fopenmp
PKG_LIBS= -lm -lfftw3 -fopenmp -lgomp

